<% include ../partials/header %>

    <div class="row">
        <div class="formContainer" style="width: 30%; margin: 15rem auto;">
            <h1 class="display-5">Edit <%=artist.name%></h1>
            <form class="inputForm" action="/artists/<%=artist.id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Artist Name</label>
                    <input type="text" class="form-control" name="artist[name]" id="name" value="<%=artist.name%>">
                </div>
                <div class="form-group">
                    <label for="imageUrl">Artist Image</label>
                    <input type="text" class="form-control" name="artist[imageUrl]" id="imageUrl" value="<%=artist.imageUrl%>">
                </div>
                <button style="margin-bottom: 30px" id="submitButton" type="submit" class="btn btn-primary">Submit</button>
            </form>
            <a  href="/artists">Go back</a>
        </div>  
    </div>

<% include ../partials/footer %>

