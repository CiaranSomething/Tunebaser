<% include ../partials/header %>

<div class="row">
    <div style="width: 30%; margin: 25px auto;">
        <h1 class="display-4">Add a New Artist</h1>
        <form action="/artists" method="POST">
            <div class="form-group">
                <label for="name">Artist Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter artist name">
            </div>
            <div class="form-group">
                <label for="imageUrl">Artist Image</label>
                <input type="text" class="form-control" id="imageUrl" placeholder="Artist Image URL">
            </div>
            <button id="submitButton" type="submit" class="btn btn-primary">Submit</button>
        </form>
        <a href="/artists">Go back</a>
    </div>  
</div>

<% include ../partials/footer %>