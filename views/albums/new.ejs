<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Album for <%=artist.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/artists/<%= artist.id %>/albums" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="album[title]" placeholder="Title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="album[yearReleased]" placeholder="Year Released">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>                
            </form>
            <a href="/artists">Go Back</a>
        </div>
    </div>
</div>

<% include ..partials/footer %>