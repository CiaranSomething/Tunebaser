<% include ../partials/header %>

<div class="row">
    <div class="formContainer" style="width: 30%; margin: 15rem auto;">
        <h1 class="display-5" style="text-align: center">Add New Album for <%=artist.name%></h1>
        <form class="inputForm" action="/artists/<%= artist.id %>/albums" method="POST">
            <div class="form-group">
                <label for="title">Album Title</label>
                <input class="form-control" type="text" name="album[title]" placeholder="Title">
            </div>
            <div class="form-group">
                <label for="yearReleased">Year Released</label>
                <input class="form-control" type="number" name="album[yearReleased]" placeholder="Year Released">
            </div>
            <div class="form-group">
                <label for="artworkUrl">Year Released</label>
                <input class="form-control" type="text" name="album[artworkUrl]" placeholder="Artwork URL">
            </div>
            <button style="margin-bottom: 30px" id="submitButton" type="submit" class="btn btn-primary">Submit</button>             
        </form>
        <a href="/artists">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>